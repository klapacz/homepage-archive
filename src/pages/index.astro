---
import Layout from '../components/Layout.astro';
import { Icon } from 'astro-icon'

const links = [
    {icon: 'mdi:github', text: 'GitHub', url: 'https://github.com/klapacz'},
    {icon: 'mdi:gmail', text: 'Email', url: 'mailto:lapacz.kornel@gmail.com'},
    {icon: 'mdi:circle-outline', text: 'Sourcehut', url: 'https://sr.ht/~kornellapacz/'},
]
---

<Layout
    title="Homepage - Korneliusz Łapacz"
    description="Kornel's homepage"
>
	<main class="max-w-2xl px-8 py-4 mx-auto bg-white rounded-lg shadow-md dark:bg-gray-800">
        <header class="my-2">
            <div class="flex justify-between items-center">
                <h1 class="text-2xl font-bold text-gray-700 dark:text-white">Koneliusz Łapacz</h1>
            </div>
            <p class="mt-4 text-gray-600 dark:text-gray-300">Software engineer. Neovim user. UNIX enthusiast.</p>
        </header>

        <nav class="flex flex-col justify-between flex-1 mt-6">
            {links.map(({icon: name, text, url: href}) => (
                <a rel="noopener" class="flex items-center px-4 py-2 text-gray-700 bg-gray-200 rounded-md mb-2 hover:underline dark:bg-gray-700 dark:text-gray-200" target="_blank" {href}>
                    <Icon {name} class="w-5 h-5"/>
                    <span class="mx-4 font-medium">{text}</span>
                </a>
            ))}
        </nav>
    </main>
</Layout>
